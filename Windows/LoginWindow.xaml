<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OdemAdmin.Windows.LoginWindow">
    <Grid>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" WidthRequest="120">
            <Label Text="Email"/>
            <Entry Text="{Binding Email}"/>
            <Label Text="Password"/>
            <Entry Text="{Binding Password}"/>
            <Button Text="Login" Margin="0,12,0,0" Clicked="Button_OnClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>