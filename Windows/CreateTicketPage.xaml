<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OdemAdmin.Windows.CreateTicketPage">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Text="Email:" FontSize="16"/>
        <Entry x:Name="ClientIdTextBox" Grid.Row="0" Grid.Column="1"/>
        <Label Margin="0,8,0,0" Grid.Column="0" Grid.Row="1" Text="Message:" FontSize="16"/>
        <Entry x:Name="MessageTextBox" Margin="0,8,0,0" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="SendButton" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="35" WidthRequest="100" Text="Send" Clicked="SendButton_OnClick"/>
    </Grid>
</ContentPage>